# Schwab API Configuration (OAuth 2.0)
SCHWAB_APP_KEY=your_app_key_here
SCHWAB_SECRET=your_app_secret_here
SCHWAB_TOKEN=./tokens/schwabToken.json
SCHWAB_ACCOUNT_NUMBER=your_account_number_here

# Database
DB_URL=sqlite:///./data/trading.db

# Trading Configuration
ACCOUNT_SIZE=10000
MAX_RISK_PERCENT=0.10

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000

# Telegram Configuration (Optional)
# To set up:
# 1. Search "@BotFather" in Telegram → send "/newbot"
# 2. Copy your BOT_TOKEN (format: 123456789:ABC-DEF...)
# 3. Send any message to your bot
# 4. Visit: https://api.telegram.org/bot<YOUR_TOKEN>/getUpdates
# 5. Find "chat" → "id" and copy that value
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
# For multiple recipients: TELEGRAM_CHAT_IDS=123456789,987654321